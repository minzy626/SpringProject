<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.javalec.ex.dao.UserDao">

	<insert id="register" parameterType="UserDto">
		INSERT INTO USERINFO (bid,bpass,bnick,bgender,bschool,bgrade,bmajor,bregion) VALUES(#{bId},#{bPass},#{bNick},#{bGender},#{bSchool},#{bGrade},#{bMajor},#{bRegion})
	</insert>
	
	<select id="find_by_id" parameterType="UserDto" resultType="UserDto">
		SELECT * FROM USERINFO WHERE bId = #{bId}
	</select>
	
	<select id="find_by_nick" parameterType="UserDto" resultType="UserDto">
		SELECT * FROM USERINFO WHERE bNick = #{bNick}
	</select>
	
	<select id="find_by_email" parameterType="UserDto" resultType="UserDto">
		SELECT * FROM USERINFO WHERE bEmail = #{bEmail}
	</select>
	
</mapper>
    