<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.javalec.ex.dao.IDao">

	<select id="list" resultType="Dto">
		SELECT * FROM MVC_BOARD ORDER BY bId desc
	</select>
	
	<select id="contentView" parameterType="string" resultType="Dto">
		SELECT * FROM MVC_BOARD WHERE BID = #{param2}
	</select>
	
	<update id="modify" parameterType="Dto">
		UPDATE MVC_BOARD SET BNAME = #{bName}, BTITLE = #{bTitle}, BCONTENT= #{bContent} WHERE BID = #{bId}
	</update>
	
	<delete id="delete" parameterType="String">
		DELETE FROM MVC_BOARD WHERE BID = #{param1}
	</delete>
	
	<insert id="write" parameterType="Dto">
		INSERT INTO MVC_BOARD (BNAME,BTITLE,BCONTENT,BHIT) VALUES(#{bName},#{bTitle},#{bContent},#{bHit})
	</insert>
	
	<update id="upHit" parameterType="String">
		UPDATE MVC_BOARD SET BHIT = BHIT + 1 WHERE BID = #{param1}
	</update>
</mapper>
